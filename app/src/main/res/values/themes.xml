<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardFast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--- Theme Style for Night Mode Switch -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--- Theme Style for Notifications Switch -->
    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--- Theme Style for Private Account Switch -->
    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- Light mode-->
    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#8692F7</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SCREEN_FRAGMENT">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="NAV_HEADER">
        <item name="android:background">#8692F7</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Texts background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!-- button backgorund if light mode on -->
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Estilo para TextInputLayout-->
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/purple_700</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextAppearance">@style/HintStyle</item>
    </style>

    <!-- Estilo de hint para TextInputLayout -->
    <style name="HintStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Estilo para el texto principal -->
    <style name="TextStyle.MainText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Estilo para botones -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>
</resources>
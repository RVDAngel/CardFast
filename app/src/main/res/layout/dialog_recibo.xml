<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_rounded"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_recibo_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_recibo_titulo"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/TEXT"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_recibo_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_recibo_fecha"
            style="@style/TEXT"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_recibo_monto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_recibo_monto"
            style="@style/TEXT"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_recibo_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_recibo_telefono"
            style="@style/TEXT"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_recibo_metodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_recibo_metodo"
            style="@style/TEXT"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_recibo_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_recibo_tarjeta"
            style="@style/TEXT"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_finalizar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="@string/texto_finalizar"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_rounded"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>
</ScrollView>

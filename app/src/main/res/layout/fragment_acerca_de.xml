<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".fragmentos.AcercaDeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/descripcion_logo"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:textStyle="bold"
            style="@style/TEXT"
            android:layout_marginBottom="4dp" />

        <!-- Versión -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            style="@style/TEXT"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="24dp" />

        <!-- Desarrollador -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_developer"
            android:textSize="16sp"
            style="@style/TEXT"
            android:layout_marginBottom="8dp" />

        <!-- Correo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_email"
            android:textSize="16sp"
            style="@style/TEXT"
            android:layout_marginBottom="8dp" />

        <!-- Página web -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_website"
            android:textSize="16sp"
            style="@style/TEXT"
            android:layout_marginBottom="24dp" />

        <!-- Botón de contacto -->
        <Button
            android:id="@+id/btn_contactar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:text="@string/btn_contact_support"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_rounded"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableStart="@drawable/baseline_send_24"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Redes sociales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow_us"
            android:textSize="16sp"
            style="@style/TEXT"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_facebook"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/facebook" />

            <ImageButton
                android:id="@+id/btn_instagram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_instagram"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/instagram"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/btn_youtube"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_youtube"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/youtube" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>